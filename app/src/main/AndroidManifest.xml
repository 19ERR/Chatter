<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chatter">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chatter">

        <activity
            android:name=".activities.ContactListActivity"
            android:label="@string/title_activity_contact_list"
            android:theme="@style/Theme.Chatter.NoActionBar" />
        <activity
            android:name=".activities.ConversationsListActivity"
            android:label="@string/title_activity_conversations_list"
            android:theme="@style/Theme.Chatter.NoActionBar" />
        <activity
            android:name=".activities.ConversationActivity"
            android:label="@string/title_activity_conversation"
            android:theme="@style/Theme.Chatter.NoActionBar" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>